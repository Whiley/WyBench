<project name="BuildTemplate">  

  <target name="compile">
    <echo message="COMPILING: ${ant.project.name}"/>
    <echo message="==================================="/>
    <wyc whileypath="${wybench.jar}:${wyrt.jar}" wyildir="." whileydir="." includes="**/*.whiley"/>
  </target>

  <target name="run">
    <echo message="RUNNING: ${ant.project.name}"/>
    <echo message="==================================="/>
    <java classpath="${wybench.jar}:${wyjc.jar}:." classname="${main}">
      <arg value="${input}"/>
    </java>
  </target>

  <target name="clean">
    <echo message="CLEANING: ${ant.project.name}"/>
    <echo message="==================================="/>
    <delete includeEmptyDirs="true" failonerror="false">
      <fileset dir="." includes="**/*.class"/>
      <fileset dir="." includes="**/*.wyil"/>
    </delete>
  </target>

</project>  

