<project name="BuildTemplate">  

  <target name="compile">
    <echo message="COMPILING: ${ant.project.name}"/>
    <echo message="==================================="/>
    <!--<wyjc verification="${wyc.verification}" verificationConditions="${wyc.verificationConditions}"verbose="false" wycsdir="." wyildir="." whileydir="." whileypath="${wybench.jar}:${wyrt.jar}" includes="**/*.whiley"/>-->
    <wyc whileypath="${wybench.jar}:${wyrt.jar}" wyildir="src/${ant.project.name}/" whileydir="src/${ant.project.name}/"/>
    <!--<javac debug="true" srcdir="." includeantruntime="false" includes="**/*.java" classpath=".:${wyjc.jar}"/>-->
  </target>

  <target name="run">
    <echo message="RUNNING: ${ant.project.name}"/>
    <echo message="==================================="/>
    <java classpath="${wybench.jar}:${wyjc.jar}:." classname="${main}">
      <arg value="${input}"/>
    </java>
  </target>

  <target name="clean">
    <echo message="CLEANING: ${ant.project.name}"/>
    <echo message="==================================="/>
    <delete includeEmptyDirs="true" failonerror="false">
      <fileset dir="." includes="**/*.class"/>
      <fileset dir="." includes="**/*.wyil"/>
    </delete>
  </target>

</project>  

